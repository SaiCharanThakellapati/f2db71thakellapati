extends layout 
 
block content 
  h1= title 
 
  form(id='AmazonForm', action="/resource/Amazons", method="POST") 
    div.form-group 
        label.AmazonAttr(for='item') Amazon item
        input#item(type='text', name='item') 
    div.form-group 
        label.AmazonAttr(for='quantity') Amazon quantity 
        input#quantity(type='text', name='quantity') 
    div.form-group 
        label.AmazonAttr(for='cost') Amazon cost 
        input#cost(type='number', name='cost') 
    input(type="submit") 
 
  script. 
    document.forms['AmazonForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    }); 