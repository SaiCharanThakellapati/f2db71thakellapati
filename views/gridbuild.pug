extends layout
block content
  h1(style="text-align:center;")= title
  p(style="text-align:center;") Rows: #{query.rows}, Columns: #{query.cols}
  - var rows=Number(query.rows);
  - var cols=Number(query.cols);
  if !Number.isInteger(rows)
    p(style="text-align:center;") Entered rows value is not an integer 
  else if !Number.isInteger(cols)
    p(style="text-align:center;") Entered columns value is not an integer
  else if rows<1||rows>10
    p(style="text-align:center;") Entered rows value is out of range  
  else if cols<1||cols>10
    p(style="text-align:center;") Entered columns value is out of range  
  else
    
    table#outer
      - for(let i=0; i<rows; i++) {
          tr#middle
            - for(let j=0; j<cols; j++) {
                td= 1 + i + j*rows
                td= " "
                td= " "
                td= " "
            -}
      -}
      